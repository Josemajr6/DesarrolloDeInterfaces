<Window x:Class="Ejercicio_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio_2" 
        mc:Ignorable="d"
        Title="MiPrimerComando - 2 DAM - IES Francisco Rodríguez Marín" Height="450" Width="800">
    
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Cut" Executed="Cortar_Executed" CanExecute="Cortar_CanExecute"/>
        <CommandBinding Command="ApplicationCommands.Paste" Executed="Pegar_Executed" CanExecute="Pegar_CanExecute"/>
    </Window.CommandBindings>

    <DockPanel>

        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="5">
            <Button Command="ApplicationCommands.Cut" Width="75" Margin="0,0,5,0">Corta</Button>
            <Button Command="ApplicationCommands.Paste" Width="75">Pega</Button>
        </StackPanel>

        <TextBox Name="txtEditor" AcceptsReturn="True" TextWrapping="Wrap" FontSize="14" Margin="5" Padding="5"/>
    </DockPanel>
</Window>