<Window x:Class="Ejercicio_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="250">
            <Label Content="Nombre:"></Label>
            <TextBox Name="txtNombre" Margin="0,0,0,10"></TextBox>

            <Label Content="Apellidos:"></Label>
            <TextBox Name="txtApellidos" Margin="0,0,0,20"></TextBox>

            <Button Content="Enviar"
                    Padding="10,5"
                    Background="Black"
                    Foreground="White">

            </Button>
        </StackPanel>
    </Grid>
</Window>
