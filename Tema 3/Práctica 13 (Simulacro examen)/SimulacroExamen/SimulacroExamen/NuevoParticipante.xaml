<Window x:Class="SimulacroExamen.NuevoParticipante"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimulacroExamen"
        mc:Ignorable="d"
        Title="NuevoParticipante" Height="380" Width="350">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <Label FontFamily="Segoe UI Black" HorizontalAlignment="Center" Margin="25" FontSize="20">➕ NUEVO PARTICIPANTE</Label>
            <Label Content="_Nombre" Target="{Binding ElementName=tbNombre}" Margin="15,0,0,0"></Label>
            <TextBox Name="tbNombre" Margin="15,0,0,0" Width="150" HorizontalAlignment="Left"></TextBox>
            <Label Content="_DNI:" Target="{Binding ElementName=tbDNI}" Margin="15,10,0,0"></Label>
            <TextBox Name="tbDNI" Margin="15,0,0,0" Width="150" HorizontalAlignment="Left"></TextBox>

            <Label Content="_Actividad:" Target="{Binding ElementName=cbActividad}" Margin="15,10,0,0"></Label>
            <ComboBox Name="cbActividad" Margin="15,0,0,0" Width="150" HorizontalAlignment="Left" >
                <ComboBoxItem>Fútbol</ComboBoxItem>
                <ComboBoxItem>Baloncesto</ComboBoxItem>
                <ComboBoxItem>Natación</ComboBoxItem>
            </ComboBox>

            <Label Content="_Edad:" Target="{Binding ElementName=tbDNI}" Margin="15,10,0,0"></Label>
            <TextBox Name="tbEdad" Margin="15,0,0,0" Width="150" HorizontalAlignment="Left"></TextBox>
            <Button Margin="25" Background="Beige" Name="btnAceptar" Click="btnAceptar_Click">Aceptar</Button>
        </StackPanel>
        
    </Grid>
</Window>
