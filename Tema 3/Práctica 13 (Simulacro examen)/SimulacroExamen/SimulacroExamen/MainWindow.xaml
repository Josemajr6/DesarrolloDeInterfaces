<Window x:Class="SimulacroExamen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimulacroExamen"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <DockPanel Margin="0,0,0,0">
        <Menu DockPanel.Dock="Top" Grid.ColumnSpan="2" Background="Beige">
            <MenuItem Header="Participantes">
                <MenuItem Header="Nuevo participante..." Click="NuevoParticipante"></MenuItem>
                <MenuItem Header="Modificar actividad..." Click="ModificarActividad"></MenuItem>
                <MenuItem Header="Eliminar participante..." Click="EliminarParticipante"></MenuItem>
                <MenuItem Header="Informe completo" Click="InformeCompleto"></MenuItem>
            </MenuItem>
            <MenuItem Header="Operaciones">
                <MenuItem Header="Guardar informe"></MenuItem>
                <MenuItem Header="Estadísticas"></MenuItem>
            </MenuItem>
        </Menu>
        <Border Grid.Row="0" Grid.Column="1"  BorderThickness="2" BorderBrush="Beige" Margin="15">
            <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition ></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Image Source="/Assets/portada.jpg"></Image>


            <StackPanel Grid.Column="1"  VerticalAlignment="Center">
                 <Label  HorizontalAlignment="Center"  FontSize="35" FontFamily="Segoe UI Black">Club Multideporte</Label>
                 <TextBlock  Margin="5" HorizontalAlignment="Center" TextWrapping="Wrap" Width="279">
                ¡Bienvenido a Multideporte!. <LineBreak></LineBreak> Regístrate para acceder a decenas de deportes.</TextBlock>
            </StackPanel>




                <StatusBar Grid.Row="1" Grid.ColumnSpan="2" Background="Beige">Pulsa "Participantes" para comenzar</StatusBar>
        </Grid>
        </Border>
    </DockPanel>


</Window>
