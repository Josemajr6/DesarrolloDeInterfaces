<Window x:Class="IntroduccionNivelPrincipante.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IntroduccionNivelPrincipante"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="15">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Margin="5" FontSize="20">Introduce tu nombre:</Label>
            <TextBox Margin="5" Name="tbNombre" Width="200" Height="30" 
                     FontSize="18" HorizontalAlignment="Left"></TextBox>
            <Button Margin="0,15,0,0" Name="enviarBoton" Width="150" 
HorizontalAlignment="Center" FontSize="18" Foreground="White" Background="Black" Click="enviarBoton_Click">Enviar</Button>
        </StackPanel>
    </Grid>
</Window>
