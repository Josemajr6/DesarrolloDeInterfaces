<Window x:Class="IntroduccionNivel_Avanzado.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IntroduccionNivel_Avanzado"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="25" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label>Lista de usuarios: </Label>
            <ListBox Name="lbUsuarios"></ListBox>
            <StackPanel Orientation="Horizontal">
                <Button Margin="15" BorderBrush="Black" Foreground="White" Background="MidnightBlue" Width="114" Height="25" Click="btnAgregar_Click">Agregar usuario</Button>
                <Button Margin="15" BorderBrush="Black" Foreground="White" Background="Red" Width="78" Click="btnSalir_Click">Salir</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>