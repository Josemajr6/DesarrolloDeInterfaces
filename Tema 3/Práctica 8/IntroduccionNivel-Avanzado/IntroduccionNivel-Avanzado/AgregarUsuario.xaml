<Window x:Class="IntroduccionNivel_Avanzado.AgregarUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IntroduccionNivel_Avanzado"
        mc:Ignorable="d"
        Title="AgregarUsuario" Height="280" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="304" Margin="0,17,0,0">
            <Label FontSize="22" Foreground="Indigo" FontWeight="ExtraBold" Margin="0,0,0,15" HorizontalAlignment="Center" Content="➕ Agregar Usuario"/>
            <Label FontFamily="Reem Kufi">Introduce el nombre:</Label>
            <TextBox Name="tbNombre" BorderBrush="Indigo"></TextBox>
            <Label FontFamily="Reem Kufi">Introduce la edad:</Label>
            <TextBox Name="tbEdad" BorderBrush="Indigo"></TextBox>
            <StackPanel Margin="25" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Click="btnAceptar_Click" BorderBrush="Indigo" Background="Azure" Margin="0,0,25,0" Width="76">👌 Aceptar</Button>
                <Button Click="btnCancelar_Click" BorderBrush="Indigo" Background="LightSalmon"  Width="81">❎ Cancelar</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
