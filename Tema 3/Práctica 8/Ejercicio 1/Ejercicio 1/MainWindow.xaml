<Window x:Class="Ejercicio_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="15">
        <StackPanel>
            <Label Name="lNombre" Content="_Nombre" Target="{Binding ElementName=tbNombre}"/>
            <TextBox Name="tbNombre"></TextBox>
            <Label Name="lApellidos" Content="_Apellidos" Target="{Binding ElementName=tbApellidos}"/>
            <TextBox Name="tbApellidos"></TextBox>
            <Label Name="lEmail" Content="_Email" />
            <Button Width="150" HorizontalAlignment="Left" Foreground="White" Background="Black" Click="Button_Click">Rellenar email</Button>
        </StackPanel>
    </Grid>
</Window>
