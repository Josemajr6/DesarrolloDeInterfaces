<Window x:Class="Ejercicio_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="15">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label FontSize="25" HorizontalAlignment="Center" FontWeight="Bold">Formulario</Label>
            
            <Label FontSize="15" Content="_Nombre" Target="{Binding ElementName=tbNombre}"/>
            <TextBox FontSize="15" Name="tbNombre" Width="500"></TextBox>
            
            <Label FontSize="15" Name="lApellidos" Content="_Apellidos" Target="{Binding ElementName=tbApellidos}"/>
            <TextBox FontSize="15" Name="tbApellidos"></TextBox>
            
            <Label FontSize="15" Name="lEmail" Content="_Email" />
            <TextBox FontSize="15" Name="tbEmail" IsReadOnly="True"></TextBox>
            
            <Button FontSize="15" Width="200" Margin="0,25,0,0"  Foreground="White" Background="Black" Click="Button_Click" Height="45">Rellenar email</Button>
        </StackPanel>
    </Grid>
</Window>
