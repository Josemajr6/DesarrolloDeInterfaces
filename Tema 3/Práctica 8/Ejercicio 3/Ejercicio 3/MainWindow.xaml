<Window x:Class="Ejercicio_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.New" 
                      Executed="NewCommand_Executed" 
                      CanExecute="NewCommand_CanExecute" />
    </Window.CommandBindings>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Archivo" Click="MenuItem_Click">
                <MenuItem.Icon>
                    <Image Source="./Assets/archivo.png" Width="16" Height="16" />
                </MenuItem.Icon>

                <MenuItem Header="_Nuevo" Command="ApplicationCommands.New">
                    <MenuItem.Icon>
                        <Image Source="./Assets/nuevo.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="_Guardar" Name="MenuGuardar" Click="MenuGuardar_Click">
                    <MenuItem.Icon>
                        <Image Source="./Assets/guardar.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="_Editar">
                <MenuItem.Icon>
                    <Image Source="./Assets/editar.png" Width="16" Height="16" />
                </MenuItem.Icon>

                <MenuItem Header="_Cortar" Command="ApplicationCommands.Cut" CommandTarget="{Binding ElementName=txtEditor}">
                    <MenuItem.Icon>
                        <Image Source="./Assets/cortar.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="_Copiar" Command="ApplicationCommands.Copy" CommandTarget="{Binding ElementName=txtEditor}">
                    <MenuItem.Icon>
                        <Image Source="./Assets/copiar.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="_Pegar" Command="ApplicationCommands.Paste" CommandTarget="{Binding ElementName=txtEditor}">
                    <MenuItem.Icon>
                        <Image Source="./Assets/pegar.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>

        <TextBox Name="txtEditor" AcceptsReturn="True" TextWrapping="Wrap" />

    </DockPanel>
</Window>