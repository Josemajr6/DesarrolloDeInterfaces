<Window x:Class="Ejercicio_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">

            <MenuItem Header="_Opción 1">
                <MenuItem.Icon>
                    <Image Source="Assets/archivo.png" Width="16" Height="16" />
                </MenuItem.Icon>

                <MenuItem Header="_Sub-opción 1.1" Name="MenuOpcion1_1" Click="MenuOpcion1_1_Click">
                    <MenuItem.Icon>
                        <Image Source="Assets/nuevo.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="_Sub-opción 1.2" Name="MenuOpcion1_2" Click="MenuOpcion1_2_Click">
                    <MenuItem.Icon>
                        <Image Source="Assets/abrir.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="_Sub-opción 1.3" Name="MenuOpcion1_3" Click="MenuOpcion1_3_Click">
                    <MenuItem.Icon>
                        <Image Source="Assets/guardar.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>

                <Separator />

                <MenuItem Header="_Sub-opción 1.4" Name="MenuOpcion1_4" Click="MenuOpcion1_4_Click">
                    <MenuItem.Icon>
                        <Image Source="Assets/salir.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="_Opción 2">
                <MenuItem.Icon>
                    <Image Source="Assets/editar.png" Width="16" Height="16" />
                </MenuItem.Icon>

                <MenuItem Header="_Sub-opción 2.1" Name="MenuOpcion2_1" Click="MenuOpcion2_1_Click">
                    <MenuItem.Icon>
                        <Image Source="Assets/cortar.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="_Sub-opción 2.2" Name="MenuOpcion2_2" Click="MenuOpcion2_2_Click">
                    <MenuItem.Icon>
                        <Image Source="Assets/copiar.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="_Sub-opción 2.3" Name="MenuOpcion2_3" Click="MenuOpcion2_3_Click">
                    <MenuItem.Icon>
                        <Image Source="Assets/pegar.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

        </Menu>

        <Grid>
            <TextBlock Text="Haz clic en una opción del menú" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" />
        </Grid>

    </DockPanel>
</Window>