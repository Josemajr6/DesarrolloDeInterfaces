<Window x:Class="Ejercicio_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">

            <MenuItem Header="_Archivo">
                <MenuItem.Icon>
                    <Image Source="Assets/archivo.png" Width="16" Height="16" />
                </MenuItem.Icon>

                <MenuItem Header="_Nuevo" Name="MenuNuevo" Click="MenuNuevo_Click">
                    <MenuItem.Icon>
                        <Image Source="Assets/nuevo.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="_Abrir" Name="MenuAbrir" Click="MenuAbrir_Click">
                    <MenuItem.Icon>
                        <Image Source="Assets/abrir.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="_Guardar" Name="MenuGuardar" Click="MenuGuardar_Click">
                    <MenuItem.Icon>
                        <Image Source="Assets/guardar.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>

                <Separator />

                <MenuItem Header="_Salir" Name="MenuSalir" Click="MenuSalir_Click">
                    <MenuItem.Icon>
                        <Image Source="Assets/salir.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <MenuItem Header="_Editar">
                <MenuItem.Icon>
                    <Image Source="Assets/editar.png" Width="16" Height="16" />
                </MenuItem.Icon>

                <MenuItem Header="_Cortar" Name="MenuCortar" Click="MenuCortar_Click">
                    <MenuItem.Icon>
                        <Image Source="Assets/cortar.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="_Copiar" Name="MenuCopiar" Click="MenuCopiar_Click">
                    <MenuItem.Icon>
                        <Image Source="Assets/copiar.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="_Pegar" Name="MenuPegar" Click="MenuPegar_Click">
                    <MenuItem.Icon>
                        <Image Source="Assets/pegar.png" Width="16" Height="16" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

        </Menu>

        <Grid>
            <TextBlock Text="Haz clic en una opción del menú" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" />
        </Grid>

    </DockPanel>
</Window>