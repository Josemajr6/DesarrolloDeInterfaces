<Window x:Class="Ejercicio_4.VentanaEntrada"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Datos" Height="150" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Name="lblMensaje" Text="Introduce el dato:" Margin="0,0,0,5"/>
            <TextBox Name="txtDato" Height="25" Margin="0,0,0,10"/>
            <Button Content="Aceptar" Click="Button_Click" Width="80" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>