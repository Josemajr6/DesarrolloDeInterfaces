<Window x:Class="Ejercicio_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="25">
        <StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label>Introduce la dimesión de la matriz: </Label>
                <TextBox Name="tbDimension" Width="20"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                <Button Name="btnInicializar" Width="100" Height="24" Margin="0,0,350,0" Click="btnInicializar_Click">Incializa matriz</Button>
                <StackPanel Margin="25">
                    <Button Name="btnImprimirMatriz" Width="100" Margin="0,0,0,25" Click="btnImprimirMatriz_Click">Imprime matriz</Button>
                    <Button Name="btnImprimirTraspuesta" Width="100" Click="btnImprimirTraspuesta_Click">Imprime traspuest</Button>
                </StackPanel>

            </StackPanel>
            <TextBox Name="tbSalida" Height="220" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"></TextBox>
        </StackPanel>
    </Grid>
</Window>
