<Window x:Class="Ejercicio_3.AgregarTarea"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nueva Tarea" Height="150" Width="300"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Introduce la descripción de la tarea:" Margin="0,0,0,5"/>

            <TextBox Name="txtDescripcion" Height="25" Margin="0,0,0,10"/>

            <Button Content="Aceptar" Click="Button_Click" Width="80" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>