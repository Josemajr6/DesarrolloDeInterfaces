<Window x:Class="Ejercicio_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio_3"
        mc:Ignorable="d"
        Title="IES Rod.Marín - Prueba OpenFile/SaveFile" Height="450" Width="800">

    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Open" Executed="Open_Executed" CanExecute="Open_CanExecute"/>
        <CommandBinding Command="ApplicationCommands.Save" Executed="Save_Executed" CanExecute="Save_CanExecute"/>
    </Window.CommandBindings>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button Command="ApplicationCommands.Open" ToolTip="Abre un archivo .txt existente." Width="100" Margin="5">
                Abrir fichero
            </Button>

            <Button Command="ApplicationCommands.Save" ToolTip="Guarda el contenido actual en un nuevo archivo .txt." Width="100" Margin="5">
                Guardar fichero
            </Button>

        </StackPanel>

        <TextBox Name="txtEditor" Grid.Row="1" TextWrapping="Wrap" AcceptsReturn="True" FontSize="14"></TextBox>
    </Grid>
</Window>