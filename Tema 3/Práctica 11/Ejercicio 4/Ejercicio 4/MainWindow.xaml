<Window x:Class="Ejercicio_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio_4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <TabControl Name="tabControl" Grid.Row="0">
            <TabItem Header="General">
                <Grid Background="White"/>
            </TabItem>
            <TabItem Header="Seguridad">
                <Grid Background="White"/>
            </TabItem>
            <TabItem Header="Detalles">
                <Grid Background="White"/>
            </TabItem>
        </TabControl>

   
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
            <Button Name="btnAnterior" Click="BtnAnterior_Click">Anterior</Button>
            <Button Name="btnSiguiente" Click="BtnSiguiente_Click">Siguiente</Button>
            <Button Name="btnSleccionado" Click="BtnSeleccionado_Click">Seleccionado</Button>
        </StackPanel>
    </Grid>
</Window>