<Window x:Class="Ejercicio_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Border Name="bordeBotones" CornerRadius="15" BorderThickness="3" BorderBrush="Black" Margin="15" Padding="5">
        <StackPanel Margin="25" VerticalAlignment="Center">
        
            <Button Name="btnRojo" Margin="15" Background="Black" Click="btnRojo_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Width="25" Source="/Assets/circuloRojo.png" />
                    <Label Foreground="White" >Cambiar a rojo</Label>
                </StackPanel>
            </Button>
            <Button Name="btnNaranja" Margin="15" Background="Black" Click="btnNaranja_Click">
                <StackPanel Orientation="Horizontal" >
                    <Image Width="25" Source="/Assets/circuloNaranja.png" Height="21"/>
                    <Label Foreground="White">Cambiar a naranja</Label>
                </StackPanel>
            </Button>
            <Button Name="btnVerde" Margin="15" Background="Black" Click="btnVerde_Click">
                <StackPanel Orientation="Horizontal" >
                    <Image Width="25" Source="/Assets/circuloVerde.png"/>
                    <Label Foreground="White">Cambiar a verde</Label>
                </StackPanel>
            </Button>
    
        </StackPanel>
    </Border>
</Window>
