<Window x:Class="Ejercicio_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio_2"
        mc:Ignorable="d"
        Title="Color Selector" Height="300" Width="400">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Top">
            <Label Content="Selecciona un color:" FontWeight="Bold" Margin="0,0,0,5"/>

            <ComboBox Name="cbColores" Width="200" HorizontalAlignment="Left"
                      DisplayMemberPath="Name" 
                      SelectionChanged="cbColores_CambioSeleccion"/>
        </StackPanel>
    </Grid>
</Window>