<Window x:Class="Ejercicio_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio_1"
        mc:Ignorable="d"
        Title="Learn C#" Height="450" Width="400">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <ListBox Name="lbTareas" Grid.Column="0" Margin="0,0,15,0" SelectionMode="Single">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding" Value="0,5"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding NombreTarea}" FontWeight="SemiBold" VerticalAlignment="Center" Grid.Column="0"/>
                        <ProgressBar Value="{Binding ValorProgreso}" Minimum="0" Maximum="100" Height="15" Grid.Column="1" Margin="5,0,0,0" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Column="1" Orientation="Vertical" Width="120">
            <Label FontWeight="Bold" Content="ListBox selection" Margin="0,0,0,5"/>
            <Button Content="Show selected" Click="BotonMostrarSeleccion_Click" Margin="0,5,0,0"/>
            <Button Content="Select last" Click="BotonSeleccionarUltima_Click" Margin="0,5,0,0"/>
            <Button Content="Select next" Click="BotonSeleccionarSiguiente_Click" Margin="0,5,0,0"/>
            <Button Content="Select C#" Click="BotonSeleccionarCsharp_Click" Margin="0,5,0,0"/>
            <Button Content="Select all" Click="BotonSeleccionarTodo_Click" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Window>