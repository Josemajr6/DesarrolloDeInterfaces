<Window x:Class="Ejercicio_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <ListView Name="lvUsers">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nombre" Width="150" DisplayMemberBinding="{Binding Nombre}" />
                    <GridViewColumn Header="Edad" Width="50" DisplayMemberBinding="{Binding Edad}" />
                    <GridViewColumn Header="Email" Width="200" DisplayMemberBinding="{Binding Mail}" />
                    <GridViewColumn Header="Ciudad" Width="100" DisplayMemberBinding="{Binding Ciudad}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
