<Window x:Class="Ejercicio1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio1"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="350">
    <Grid>
        <TextBlock Margin="10" TextWrapping="Wrap" FontSize="16">
            
            <Run Foreground="Red">Esta primera línea es roja.</Run>
            
            <LineBreak/>
            
            <Run Foreground="Blue">La segunda es de color azul.</Run>
            
            
            <LineBreak/> 
            <Run Foreground="Green">En esta última línea, la palabra</Run>
            <Run FontWeight="Bold" Foreground="Green">importante</Run>
            <Run Foreground="Green">está en negrita.</Run>

        </TextBlock>
    </Grid>
</Window>
