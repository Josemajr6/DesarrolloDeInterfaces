<Window x:Class="Ejercicio_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="270" Width="380">
    <Grid>
        <StackPanel Margin="20">

            <Label Content="Pregunta: ¿Cuál es la mejor app para ahorrar?" 
               FontWeight="Bold" FontSize="14"/>

            <StackPanel x:Name="panelRespuestas" Margin="20,10,0,0">

                <RadioButton x:Name="rbOpcion1" GroupName="respuestas" Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Wallapop_Logo.png" Width="18" Margin="0,0,5,0"></Image>
                        <TextBlock VerticalAlignment="Center">Wallapop</TextBlock>
                    </StackPanel>
                </RadioButton>
                <RadioButton x:Name="rbOpcion2" GroupName="respuestas" Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Milanuncios_Logo.png" Width="17" Margin="0,0,5,0"></Image>
                        <TextBlock VerticalAlignment="Center">Milanuncios</TextBlock>
                    </StackPanel>
                </RadioButton>
                <RadioButton x:Name="rbCorrecta" GroupName="respuestas" Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Nexus_Logo.png" Width="17" Margin="0,0,5,0"></Image>
                        <TextBlock VerticalAlignment="Center">Nexus</TextBlock>
                    </StackPanel>
                </RadioButton>
                <RadioButton x:Name="rbOpcion4" GroupName="respuestas" Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Chollometro_Logo.png" Width="18" Margin="0,0,5,0"></Image>
                        <TextBlock VerticalAlignment="Center">Chollometro</TextBlock>
                    </StackPanel>
                </RadioButton>
            </StackPanel>

            <Button x:Name="btnCorregir" 
                Content="Corregir" 
                Click="Corregir_Click" 
                Margin="0,20,20,10"
                Padding="10,5"
                Background="Black"
                Foreground="White"
                FontWeight="bold"/>

            <TextBlock x:Name="tbContador" 
                   HorizontalAlignment="Center"
                   FontSize="12"
                   FontStyle="Italic"/>

        </StackPanel>
    </Grid>
</Window>
