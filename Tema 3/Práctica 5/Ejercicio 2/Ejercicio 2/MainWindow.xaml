<Window x:Class="Ejercicio_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>

        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Archivo">
                <MenuItem Header="Abrir"/>
                <MenuItem Header="Guardar"/>
                <Separator/>
                <MenuItem Header="Salir"/>
            </MenuItem>
            <MenuItem Header="_Editar">
                <MenuItem Header="Copiar"/>
                <MenuItem Header="Pegar"/>
            </MenuItem>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="Listo"/>
            </StatusBarItem>
        </StatusBar>

        <StackPanel DockPanel.Dock="Left" Margin="10" Width="150">
            <Button Margin="0,5" Background="Beige">Botón 1</Button>
            <Button Margin="0,5" Background="Beige">Botón 2</Button>
            <Button Margin="0,5" Background="Beige">Botón 3</Button>
        </StackPanel>

        <TextBlock Text="Este TextBlock ocupa todo el espacio restante"
                   FontSize="20"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Background="Beige"/>

    </DockPanel>
</Window>
