<Window x:Class="Ejercicio_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio_5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>

        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="White">
            <Button Name="btnArchivo" Margin="5" Padding="10,5" Background="Beige">Archivo</Button>
            <Button Name="btnEditar" Margin="5" Padding="10,5" Background="Beige">Editar</Button>
            <Button Name="btnAyuda" Margin="5" Padding="10,5" Background="Beige">Ayuda</Button>
        </StackPanel>

        <TextBlock DockPanel.Dock="Bottom" Background="White" Padding="5" TextAlignment="Center">Terminado</TextBlock>

        <Grid Background="LightBlue">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock FontSize="22" FontWeight="Bold" Margin="10" TextAlignment="Center">Centro</TextBlock>
                <Button Name="btnAccionCentral" Padding="10" Margin="10" Width="150" Background="Beige">Botón</Button>
            </StackPanel>

        </Grid>

    </DockPanel>
</Window>
